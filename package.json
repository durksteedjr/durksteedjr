{
  "name": "packages",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm turbo:build",
    "changeset": "changeset",
    "changeset:publish": "pnpm changeset publish",
    "changeset:publish:snapshot": "changeset publish --tag snapshot",
    "changeset:version": "pnpm changeset version",
    "changeset:version:snapshot": "pnpm changeset version --snapshot snapshot",
    "ci:publish": "pnpm build && pnpm changeset:publish",
    "ci:publish:snapshot": "pnpm build && pnpm:changeset:snapshot",
    "ci:version": "pnpm changeset:version",
    "ci:version:snapshot": "pnpm changeset:version:snapshot",
    "commitlint": "commitlint",
    "commitlint:edit": "pnpm commitlint --edit",
    "dev": "pnpm turbo:dev",
    "durksteedjr": "node ./durksteedjr/cli/dist/index.mjs",
    "eslint": "eslint",
    "eslint:lint": "pnpm eslint --fix './**/*.{js,json,jsx,ts,tsx,yaml}'",
    "husky": "husky",
    "husky:commit-msg": "pnpm commitlint:edit",
    "husky:install": "pnpm husky install",
    "husky:pre-commit": "pnpm lint-staged",
    "lint": "pnpm eslint:lint && pnpm prettier:lint",
    "lint-staged": "lint-staged",
    "prepare": "pnpm husky:install",
    "prettier": "prettier",
    "prettier:lint": "pnpm prettier --write ./",
    "turbo": "turbo",
    "turbo:build": "pnpm turbo run build",
    "turbo:dev": "pnpm turbo run build",
    "turbo:typecheck": "pnpm turbo run typecheck",
    "typecheck": "pnpm turbo:typecheck"
  },
  "devDependencies": {
    "@changesets/changelog-git": "^0.1.14",
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@next/eslint-plugin-next": "^13.4.11",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-mdx": "^2.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "eslint-plugin-yaml": "^0.5.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "prettier-plugin-packagejson": "^2.4.5",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "turbo": "^1.10.7"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "@typescript-eslint/eslint-plugin": "^6.0.0"
      }
    }
  }
}
