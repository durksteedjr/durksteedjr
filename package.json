{
  "name": "monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "changeset": "changeset",
    "ci:publish": "pnpm build && pnpm changeset publish",
    "ci:publish:snapshot": "pnpm build && pnpm changeset publish --tag snapshot",
    "ci:version": "pnpm changeset version",
    "ci:version:snapshot": "pnpm changeset version --snapshot snapshot",
    "commitlint": "commitlint",
    "db:branch": "turbo branch --filter=db",
    "db:create": "turbo create --filter=db",
    "db:generate": "turbo run generate --filter=db",
    "db:push": "turbo dev push --filter=db",
    "dev": "turbo dev",
    "durksteedjr": "node ./durksteedjr/cli/dist/index.mjs",
    "eslint": "eslint",
    "husky": "husky",
    "husky:commitlint": "commitlint --edit",
    "husky:lint-staged": "lint-staged",
    "lint": "pnpm lint:eslint && pnpm lint:prettier",
    "lint-staged": "lint-staged",
    "lint:eslint": "eslint --fix './**/*.{js,json,jsx,ts,tsx,yaml}'",
    "lint:prettier": "prettier --write ./",
    "prepare": "pnpm prepare:db && pnpm prepare:husky",
    "prepare:db": "pnpm db:generate",
    "prepare:husky": "husky install",
    "prettier": "prettier",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@changesets/changelog-git": "^0.1.14",
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@next/eslint-plugin-next": "^13.4.11",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-mdx": "^2.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "eslint-plugin-yaml": "^0.5.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "prettier-plugin-packagejson": "^2.4.5",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "turbo": "^1.10.7"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "@typescript-eslint/eslint-plugin": "^6.0.0"
      }
    }
  }
}
